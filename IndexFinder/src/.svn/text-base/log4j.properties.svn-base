### direct log messages to CONSOLE ###
log4j.appender.CONSOLE=org.apache.log4j.ConsoleAppender
#log4j.appender.CONSOLE.Target=System.out
#log4j.appender.CONSOLE.Threshold=FATAL
log4j.appender.CONSOLE.layout=org.apache.log4j.PatternLayout
log4j.appender.CONSOLE.layout.ConversionPattern=%d{ABSOLUTE} %5p [%t]%C{1} - %m%n
#log4j.appender.stderr.layout.ConversionPattern=%5p [%t] (%F:%L) - %m%n
#log4j.appender.CONSOLE.layout.ConversionPattern=%-4r [%t] %-5p %c %x - %m%n

### set log levels - for more verbose logging change 'info' to 'debug' ###
log4j.rootLogger=warn, CONSOLE

log4j.category.com.mchange.v2.c3p0=WARN, CONSOLE
log4j.category.com.mchange.v2.resourcepool=WARN, CONSOLE

log4j.logger.edu.pitt.dbmi.odie.uima.minipar=WARN
log4j.logger.edu.pitt.dbmi.odie.uima.indexfinder=WARN
log4j.logger.edu.mayo.bmi.uima.lvg.resource=WARN

log4j.logger.edu.pitt.dbmi.odie.uima.church.consumer=WARN

